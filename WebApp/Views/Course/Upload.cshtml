@model CourseUploadViewModel

@{
    Layout = "_CourseFormLayout";
    var courseTypes = ViewBag.CourseTypes as List<CourseTypeViewModel>;
}

<div class="container d-flex justify-content-center align-items-center h-100">
    <div class="card fixed-width h-80" data-bs-theme="dark">
        <div class="card-header secondary-color fw-bold">
            Form
        </div>
        <div class="card-body">
            <form class="p-3 h-100" asp-controller="Course" asp-action="Upload">
                <div class="input-group mb-3" data-bs-theme="dark">
                    <span class="input-group-text" id="basic-addon1">Title</span>
                    <input type="text" class="form-control shadow-none" placeholder="Write your course title here...">
                </div>
                <span asp-validation-for="Title"></span>
                <select class="form-select mb-3" aria-label="Default select example">
                    <option value="" selected disabled="disabled">Select course type</option>
                    @foreach (var c in courseTypes)
                    {
                        <option value="@c.IdCourseType">@c.CourseTypeTitle</option>
                    }
                </select>
                <span asp-validation-for="CourseType"></span>
                <textarea id="textbox" class="p-3 w-100 h-75 form-control shadow-none" placeholder="Write your content here..."></textarea>
                <span asp-validation-for="Content"></span>
                <div class="mt-3">
                    <button type="reset" class="btn btn-outline-danger">Clear</button>
                    <button type="submit" class="btn btn btn-outline-info ms-3">Submit</button>
                </div>
            </form>
        </div>
    </div>
    <div class="card fixed-width h-75" data-bs-theme="dark">
        <div class="card-header secondary-color fw-bold">
            Live Preview
        </div>
        <div class="card-body overflow-auto">
            <div id="resultdiv" class="p-3"></div>
        </div>
    </div>
</div>